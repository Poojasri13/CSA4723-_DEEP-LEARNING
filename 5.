 import numpy as np
# Step 1: Define function and its derivative
f = lambda x: x**2 + 4*x + 4        # (x+2)^2
df = lambda x: 2*x + 4
# Step 2: Initialize
x, lr = 10, 0.1                     # start and learning rate
# Step 3: Gradient Descent loop
for i in range(20):
    x = x - lr * df(x)
    print(f"Iteration {i+1}: x = {x:.4f}, f(x) = {f(x):.4f}")
